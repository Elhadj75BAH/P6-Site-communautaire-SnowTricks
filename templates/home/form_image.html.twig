
{% form_theme form _self %}


    {% block _figure_imagefig_entry_widget %}
        {% if form.vars.data is  null %}
            {{ form_widget(form) }}
        {% else %}
            <div class="d-none">
                {{ form_widget(form) }}
            </div>
            <div class="row row-cols-1 row-cols  justify-content-center">
                        <img src="{{ absolute_url(asset('images/' ~form.vars.data.image  )) }}" alt="image"
                             class=" object-fit-image" >
            </div>
        {% endif %}
    {% endblock %}


     {% block _figure_videofig_entry_widget %}
         {% if form.vars.data is  null %}
             {{ form_widget(form) }}
         {% else %}
    <div class="d-none">
        {{ form_widget(form) }}
    </div>
             <div class="row row-cols-1 row-cols  justify-content-center ">
                 <iframe width="660" height="327"
                         src="{{form.vars.data.video}}"
                         title="YouTube video player" frameborder="0"
                         allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
                 </iframe>
             </div>

         {% endif %}

     {% endblock %}