{% extends 'base.html.twig' %}

{% block title %}ImageFigure index{% endblock %}

{% block body %}
    <h1>ImageFigure index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for image_figure in image_figures %}
            <tr>
                <td>{{ image_figure.id }}</td>
                <td>{{ image_figure.image }}</td>
                <td>
                    <a href="{{ path('image_figure_show', {'id': image_figure.id}) }}">show</a>
                    <a href="{{ path('image_figure_edit', {'id': image_figure.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('image_figure_new') }}">Create new</a>
{% endblock %}
